
.header {
	width: 100%;
	height: 100rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 1000;
}
.header .item {
	width: 33.3%;
	height: 100rpx;
	text-align: center;
	line-height: 100rpx;
	color: #959595;
	font-size: 30rpx;
	position: relative;
}
.header .item.active {
	color: #1d1d1d;
}
.header .item.active:after {
	position: absolute;
	content: '';
	width: 40rpx;
	height: 5rpx;
	background: #33c3a7;
	bottom: 0;
	left: 50%;
	-webkit-transform: translateX(-50%);
	    -ms-transform: translateX(-50%);
	        transform: translateX(-50%);
}

