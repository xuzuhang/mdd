
.item{
	width: 100%;
	height: 100rpx;
	border-bottom:1rpx solid #efefef;
	line-height: 100rpx;
}
.itemMain{
	width: 612rpx;
	margin: 0 auto;
	font-size: 30rpx;
	color: #333;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack:justify;
	-webkit-justify-content:space-between;
	    -ms-flex-pack:justify;
	        justify-content:space-between;
}
.itemMain ._span{
	font-weight:0;
	font-size: 20rpx;
	color: #c7c7c7;
}
.footer {
	position: absolute;
	left: 50%;
	bottom: 75rpx;
	-webkit-transform: translateX(-50%);
	    -ms-transform: translateX(-50%);
	        transform: translateX(-50%);
	width: 711rpx;
	height: 105rpx;
	line-height: 105rpx;
	background: -webkit-gradient(linear, left top, right top, from(#17c5af), color-stop(#20cdb2), color-stop(#37e0b9), to(#3fe9bb));
	background: -o-linear-gradient(left, #17c5af, #20cdb2, #37e0b9, #3fe9bb);
	background: linear-gradient(to right, #17c5af, #20cdb2, #37e0b9, #3fe9bb);
	color: #fff;
	font-size: 44rpx;
	text-align: center;
	border-radius: 10rpx;
}

